{
  "version": "2.0.0",
  "description": "Memory Bank Configuration for Plix Media Management App",
  "memory_bank": {
    "path": "./memory-bank/",
    "enabled": true,
    "core_files": {
      "active_context": "./memory-bank/activeContext.md",
      "progress_log": "./memory-bank/progress.md",
      "metrics": "./memory-bank/metrics.md",
      "project_brief": "./memory-bank/projectBrief.md"
    },
    "archives": {
      "path": "./memory-bank/archives/",
      "enabled": true,
      "naming_pattern": "{task-slug}-{date}.md",
      "categories": ["modernization", "features", "investigations", "fixes"]
    }
  },
  "mechanisms": {
    "git-workflow": {
      "enabled": true,
      "auto_commit": true,
      "branch_strategy": "feature-branches"
    },
    "verification-and-push": {
      "enabled": true,
      "pre_push_checks": ["build", "lint"]
    },
    "test-driven-development": {
      "enabled": false,
      "test_framework": "jest"
    },
    "commit-system": {
      "enabled": true,
      "conventional_commits": true
    },
    "documentation": {
      "enabled": true,
      "auto_generate": true,
      "component_docs": true
    }
  },
  "task_templates": {
    "firebase-data-persistence": {
      "intent": "Implement proper user-specific data persistence in Firebase",
      "steps": [
        "Analyze current Firebase data flow",
        "Design user-specific data structure",
        "Implement user ID-based data storage",
        "Add data loading on app initialization",
        "Test data persistence across sessions",
        "Update memory bank with implementation details"
      ],
      "timebox_minutes": 90
    },
    "tmdb-tv-integration": {
      "intent": "Implement TMDB TV Series API integration",
      "steps": [
        "Review TMDB TV API documentation",
        "Create TV series data fetching functions",
        "Update UI components for TV shows",
        "Add TV series to state management",
        "Test TV series display and functionality",
        "Document TV API implementation"
      ],
      "timebox_minutes": 120
    },
    "header-search": {
      "intent": "Implement context-aware header search functionality",
      "steps": [
        "Design search UI component",
        "Implement search API calls for TMDB",
        "Add page-specific search logic",
        "Integrate search results display",
        "Test search functionality across pages",
        "Add search state management"
      ],
      "timebox_minutes": 90
    }
  }
}
